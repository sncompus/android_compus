<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="match_parent"
  android:stretchColumns="1"
  android:background="#00ffffff"
  
  >
     <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical" >


        <TableLayout android:id="@+id/TLSS"
            android:layout_width="wrap_content"
            android:layout_height="400dip"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:shrinkColumns="1"
            android:stretchColumns="1" >

            <TextView
                android:id="@+id/show_tv0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0.5dp"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:text="星期一"
                android:textColor="@color/title"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TableRow android:id="@+id/tb1">

                <TextView
                    android:id="@+id/show_tv1_1"
                    style="@style/show_tv1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:text="1、2节" >
                </TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/show_tv1_2"
                        style="@style/show_tv2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/show_tv1_3"
                        style="@style/show_tv3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                         >
                    </TextView>
                </LinearLayout>
            </TableRow>

            <TableRow android:id="@+id/tb2">

                <TextView
                    android:id="@+id/show_tv2_1"
                    style="@style/show_tv1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" 
                    android:text="3、4节">
                </TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/show_tv2_2"
                        style="@style/show_tv2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                    </TextView>

                    <TextView
                        android:id="@+id/show_tv2_3"
                        style="@style/show_tv3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </TableRow>

            <TableRow android:id="@+id/tb3">

                <TextView
                    android:id="@+id/show_tv3_1"
                    style="@style/show_tv1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:text="5、6节" >
                </TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/show_tv3_2"
                        style="@style/show_tv2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                    </TextView>

                    <TextView
                        android:id="@+id/show_tv3_3"
                        style="@style/show_tv3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </TableRow>

            <TableRow android:id="@+id/tb4">

                <TextView
                    android:id="@+id/show_tv4_1"
                    style="@style/show_tv1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="7、8节" >
                </TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/show_tv4_2"
                        style="@style/show_tv2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                    </TextView>

                    <TextView
                        android:id="@+id/show_tv4_3"
                        style="@style/show_tv3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >
                    </TextView>
                </LinearLayout>
            </TableRow>

            <TableRow  android:id="@+id/tb5">

                <TextView
                    android:id="@+id/show_tv5_1"
                    style="@style/show_tv1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="选修1" >
                </TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/show_tv5_2"
                        style="@style/show_tv2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                          >
                    </TextView>

                    <TextView
                        android:id="@+id/show_tv5_3"
                        style="@style/show_tv3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                         >
                    </TextView>
                </LinearLayout>
            </TableRow>
            
            <TableRow android:id="@+id/tb6">

                <TextView
                    android:id="@+id/show_tv6_1"
                    style="@style/show_tv1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="选修2">
                </TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/show_tv6_2"
                        style="@style/show_tv2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                    </TextView>

                    <TextView
                        android:id="@+id/show_tv6_3"
                        style="@style/show_tv3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>

</TableLayout>
